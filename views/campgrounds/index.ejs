<%- include("../partials/header") %>



<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>
				Campgrounds
			</h1>
			<p>
				View our hand-picked Camping Site 
			</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Camping Sites</a>
			</p>
		</div>
		
	</header>

	<div class="row" >
		<% campgrounds.forEach(function(camp){ %>
		<div class="col-lg-3 col-md-4 col-sm-6 mb-5">
			
			
			<div class="card" >
  				<img class="card-img-top" src="<%= camp.image %>" alt="<%= camp.name %>">
  				<div class="card-body">
    				<h5 class="card-title"><%= camp.name %></h5>
   	 				<a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">View More</a>
  				</div>
			</div>
			
		</div>   
		<% }); %>
		
	</div>
</div>

	
	



<%- include("../partials/footer") %>
